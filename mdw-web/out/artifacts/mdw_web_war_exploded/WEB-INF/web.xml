<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
		  http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
           version="2.5">

    <!--  WEB SERVICES  -->
    <servlet>
        <servlet-name>Jersey Web Application</servlet-name>
        <servlet-class>com.sun.jersey.spi.container.servlet.ServletContainer</servlet-class>
        <init-param>
            <param-name>com.sun.jersey.config.property.packages</param-name>
            <param-value>rest</param-value>
        </init-param>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>Jersey Web Application</servlet-name>
        <url-pattern>/rest/*</url-pattern>
    </servlet-mapping>
    
    <!--  APPLICATION  -->
    <filter>
        <filter-name>AdminAccessFilter</filter-name>
        <filter-class>filter.AdminAccessFilter</filter-class>
    </filter>
    <filter>
        <filter-name>CustomerAccessFilter</filter-name>
        <filter-class>filter.CustomerAccessFilter</filter-class>
    </filter>
    <filter>
        <filter-name>ProtectedAccessFilter</filter-name>
        <filter-class>filter.ProtectedAccessFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>ProtectedAccessFilter</filter-name>
        <url-pattern>/protected/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>CustomerAccessFilter</filter-name>
        <url-pattern>/customer/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>AdminAccessFilter</filter-name>
        <url-pattern>/admin/*</url-pattern>
    </filter-mapping>

    <!-- SERVLET -->
    <servlet>
        <servlet-name>DestinationServlet</servlet-name>
        <servlet-class>servlet.DestinationServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Registration</servlet-name>
        <servlet-class>servlet.RegistrationServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UsersServlet</servlet-name>
        <servlet-class>servlet.UsersServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ReservationsServlet</servlet-name>
        <servlet-class>servlet.ReservationsServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RouteServlet</servlet-name>
        <servlet-class>servlet.RouteServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CoachServlet</servlet-name>
        <servlet-class>servlet.CoachServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>servlet.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>servlet.LogoutServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SearchServlet</servlet-name>
        <servlet-class>servlet.SearchServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CreateReservationServlet</servlet-name>
        <servlet-class>servlet.CreateReservationServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeleteUserServlet</servlet-name>
        <servlet-class>servlet.DeleteUserServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeleteReservationServlet</servlet-name>
        <servlet-class>servlet.DeleteReservationServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>InitServlet</servlet-name>
        <servlet-class>servlet.InitServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeleteDataServlet</servlet-name>
        <servlet-class>servlet.DeleteDataServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EditUserServlet</servlet-name>
        <servlet-class>servlet.EditUserServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ChangePasswordServlet</servlet-name>
        <servlet-class>servlet.ChangePasswordServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DestinationServlet</servlet-name>
        <url-pattern>/admin/destination</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>TopUpCreditServlet</servlet-name>
        <servlet-class>servlet.TopUpCreditServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>HotelSystemServlet</servlet-name>
        <servlet-class>servlet.HotelSystemServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Registration</servlet-name>
        <url-pattern>/registration</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UsersServlet</servlet-name>
        <url-pattern>/admin/users</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ReservationsServlet</servlet-name>
        <url-pattern>/customer/reservations</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeleteUserServlet</servlet-name>
        <url-pattern>/admin/deleteUser</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RouteServlet</servlet-name>
        <url-pattern>/admin/route</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CoachServlet</servlet-name>
        <url-pattern>/admin/coach</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SearchServlet</servlet-name>
        <url-pattern>/search</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CreateReservationServlet</servlet-name>
        <url-pattern>/customer/createreservation</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeleteReservationServlet</servlet-name>
        <url-pattern>/customer/deletereservation</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>InitServlet</servlet-name>
        <url-pattern>/init</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TopUpCreditServlet</servlet-name>
        <url-pattern>/customer/topupcredit</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeleteDataServlet</servlet-name>
        <url-pattern>/deletedata</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EditUserServlet</servlet-name>
        <url-pattern>/protected/edituser</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ChangePasswordServlet</servlet-name>
        <url-pattern>/protected/changepassword</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>HotelSystemServlet</servlet-name>
        <url-pattern>/admin/hotelsystem</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
